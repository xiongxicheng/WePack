<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiongxicheng.wepack.HomeActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg2"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <Button
            android:text="Create Trip"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonframe"
            android:id="@+id/buttonCreate"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonframe"
            android:text="My Lists"
            android:id="@+id/buttonLists"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/buttonCreate"
            android:layout_alignLeft="@+id/buttonCreate"
            android:layout_alignStart="@+id/buttonCreate" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/buttonframe"
            android:text="View Invitation"
            android:id="@+id/buttonViewInvitation"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/buttonLists"
            android:layout_alignLeft="@+id/buttonLists"
            android:layout_alignStart="@+id/buttonLists" />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/logout"
            android:text="Log out"
            android:id="@+id/buttonLogout"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/buttonViewInvitation"
            android:layout_toEndOf="@+id/buttonViewInvitation" />


        </RelativeLayout>
</android.support.constraint.ConstraintLayout>
