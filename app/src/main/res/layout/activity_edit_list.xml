<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xiongxicheng.wepack.EditListActivity">

        <RelativeLayout
            android:layout_width="368dp"
            android:layout_height="495dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

                <ListView
                    android:id="@+id/listViewPackList"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />


                <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
                    android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
                    android:layout_below="@+id/listViewPackList"
                    android:layout_toRightOf="@+id/editTextAdd"
                    android:layout_toEndOf="@+id/editTextAdd" />

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:text="Save"
                    android:layout_below="@+id/buttonAdd"
                    android:layout_alignLeft="@+id/buttonAdd"
                    android:layout_alignStart="@+id/buttonAdd" />

                <EditText
                    android:id="@+id/editTextAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="more item"
                    android:layout_above="@+id/buttonSave"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp" />

                <Button
                    android:id="@+id/buttonShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="share"
                    android:layout_below="@+id/buttonSave"
                    android:layout_alignLeft="@+id/buttonSave"
                    android:layout_alignStart="@+id/buttonSave"
                    android:layout_marginTop="13dp" />

                <EditText
                    android:id="@+id/editTextShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/buttonShare"
                    android:layout_alignLeft="@+id/editTextAdd"
                    android:layout_alignStart="@+id/editTextAdd"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="name/email address" />

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log out"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/editTextShare"
                    android:layout_alignEnd="@+id/editTextShare" />


        </RelativeLayout>




</android.support.constraint.ConstraintLayout>
